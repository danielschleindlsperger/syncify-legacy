{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": { "node": "10.15" },
        "useBuiltIns": "usage",
        "loose": true,
        "corejs": "3"
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    "babel-plugin-transform-typescript-metadata",
    [
      "@babel/plugin-proposal-decorators",
      {
        "legacy": true
      }
    ],
    [
      "@babel/plugin-proposal-class-properties",
      {
        "loose": true
      }
    ]
  ]
}
