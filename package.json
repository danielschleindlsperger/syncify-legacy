{
  "name": "syncify",
  "version": "0.0.1",
  "description": "Synchronized Spotify listening rooms",
  "author": "Daniel Schleindlsperger <daniel@schleindlsperger.de>",
  "main": "",
  "scripts": {
    "proxy": "node proxy.js",
    "install:api": "cd ./api && npm i",
    "install:frontend": "cd ./frontend && npm i",
    "install:all": "concurrently \"npm run install:api\" \"npm run install:frontend\" ",
    "start:api": "cd ./api && npm run start:dev",
    "start:frontend": "cd ./frontend && npm run start",
    "start:all": "concurrently \"npm run start:api\" \"npm run start:frontend\" \"npm run proxy\" "
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "concurrently \"(cd frontend && npm t)\" \"(cd api && npm t)\""
    }
  },
  "engines": {
    "node": ">= 8"
  },
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^3.6.0",
    "http-proxy": "^1.17.0",
    "http-proxy-rules": "^1.1.3",
    "husky": "^1.1.4",
    "prettier": "^1.15.2",
    "pretty-quick": "^1.8.0"
  }
}
