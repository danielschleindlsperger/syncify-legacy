{
  "name": "syncify",
  "version": "0.0.1",
  "description": "Synchronized Spotify listening rooms",
  "author": "Daniel Schleindlsperger <daniel@schleindlsperger.de>",
  "main": "",
  "scripts": {
    "docker": "docker-compose -f ./.docker/docker-compose.yml up -d",
    "bootstrap": "lerna bootstrap",
    "start": "npm run docker && lerna run start:dev --parallel",
    "test": "lerna run test --parallel",
    "deploy": "(cd frontend && npm run build) && netlify deploy && git push heroku master && netlify deploy --prod"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "node": ">= 8"
  },
  "license": "ISC",
  "devDependencies": {
    "husky": "^1.3.0",
    "lerna": "^3.8.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0"
  }
}
