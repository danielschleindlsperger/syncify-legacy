{
  "name": "syncify",
  "version": "0.0.1",
  "description": "Synchronized Spotify listening rooms",
  "author": "Daniel Schleindlsperger <daniel@schleindlsperger.de>",
  "main": "",
  "scripts": {
    "test": "jest",
    "build:api": "backpack build",
    "build": "npm run build:api",
    "start:api": "NODE_ENV=development backpack",
    "docker": "docker-compose -f ./.docker/docker-compose.yml up -d",
    "migrate": "node-pg-migrate",
    "bootstrap": "lerna bootstrap",
    "start": "npm run docker && lerna run start:dev --parallel",
    "cy": "cypress open",
    "e2e": "cypress run",
    "e2e:ci": "start-server-and-test start \":8080|:3000/api/health\" e2e",
    "deploy": "(cd frontend && npm run build) && netlify deploy && git push heroku master && netlify deploy --prod"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "node": ">= 10"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-typescript": "^7.6.0",
    "@nestjs/core": "^6.6.7",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.6.8",
    "@types/pg": "^7.4.14",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "backpack-core": "^0.8.4",
    "dotenv": "^8.1.0",
    "husky": "^1.3.0",
    "jest": "^24.9.0",
    "lerna": "^3.8.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "typescript": "^3.5.3",
    "webpack": "^4.36.1",
    "webpack-dotenv-plugin": "^2.1.0"
  },
  "dependencies": {
    "@nestjs/common": "^6.6.7",
    "@nestjs/platform-express": "^6.6.7",
    "babel-plugin-transform-typescript-metadata": "^0.2.2",
    "core-js": "^3.1.4",
    "prisma-client-lib": "^1.34.8",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.3"
  }
}
