{
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2019"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests"]
}
